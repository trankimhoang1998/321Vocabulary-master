<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/dialog_round_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textSize="28sp"
        android:textColor="@color/header_text"/>

    <EditText
        android:id="@+id/editTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="word" />

    <EditText
        android:id="@+id/editMota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="trans" />


    <EditText
        android:id="@+id/editTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tag" />

    <Button
        android:id="@+id/btnUpdateImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_image"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_add"
        android:drawablePadding="5dip"
        android:background="@drawable/background_btn_blue"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>

    <!--android:drawableLeft="@drawable/ic_add"-->

    <Button
        android:id="@+id/btnUpdateSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_sound"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_add"
        android:background="@drawable/background_btn_blue"
        android:drawablePadding="5dip"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textColor="@color/text_color_white"
            android:background="@drawable/background_button_blue_fill"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/text_color_white"
            android:background="@drawable/background_button_blue_fill"
            android:layout_margin="10dp"/>
    </LinearLayout>

</LinearLayout>